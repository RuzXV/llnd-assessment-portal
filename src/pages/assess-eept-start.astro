---
import Layout from '../layouts/Layout.astro';
import EeptPlayer from '../components/eept/EeptPlayer.svelte';
---

<Layout title="EEPT - In Progress">
  <main class="min-h-screen bg-gray-50 dark:bg-slate-900 flex flex-col relative overflow-hidden">

    <div class="absolute top-0 left-0 w-full h-1 bg-gray-200 dark:bg-gray-800 z-50"></div>

    <div class="absolute top-0 right-0 w-[600px] h-[600px] glow-blob translate-x-1/2 -translate-y-1/2 pointer-events-none" style="--blob-color:rgba(168,85,247,0.05)"></div>

    <div class="flex-1 max-w-4xl w-full mx-auto p-4 md:p-6 relative z-10 flex flex-col">
      <EeptPlayer client:only="svelte" />
    </div>

  </main>
</Layout>
