---
import PublicLayout from '../layouts/PublicLayout.astro';
---

<PublicLayout title="Contact Us - EduX">
  <div class="relative overflow-hidden">
    <div class="absolute top-0 left-1/4 w-[600px] h-[600px] glow-blob -translate-y-1/2 pointer-events-none" style="--blob-color:rgba(59,130,246,0.1)"></div>

    <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-16 pb-16">
      <div class="max-w-3xl mx-auto">
        <div class="text-center mb-12">
          <h1 class="text-4xl sm:text-5xl font-extrabold text-slate-900 dark:text-white tracking-tight">Contact Us</h1>
          <p class="mt-4 text-lg text-slate-600 dark:text-slate-300">Have a question or want to request a demo? We'd love to hear from you.</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
          <div class="glass-panel rounded-xl p-6 text-center">
            <div class="h-10 w-10 bg-blue-600/10 rounded-lg flex items-center justify-center mx-auto mb-3">
              <svg class="h-5 w-5 text-blue-600 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
            </div>
            <h3 class="font-semibold text-slate-900 dark:text-white mb-1">Email</h3>
            <p class="text-sm text-slate-600 dark:text-slate-400">hello@edux.com.au</p>
          </div>

          <div class="glass-panel rounded-xl p-6 text-center">
            <div class="h-10 w-10 bg-green-600/10 rounded-lg flex items-center justify-center mx-auto mb-3">
              <svg class="h-5 w-5 text-green-600 dark:text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>
            </div>
            <h3 class="font-semibold text-slate-900 dark:text-white mb-1">Phone</h3>
            <p class="text-sm text-slate-600 dark:text-slate-400">1300 EDUX AU</p>
          </div>

          <div class="glass-panel rounded-xl p-6 text-center">
            <div class="h-10 w-10 bg-purple-600/10 rounded-lg flex items-center justify-center mx-auto mb-3">
              <svg class="h-5 w-5 text-purple-600 dark:text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
            </div>
            <h3 class="font-semibold text-slate-900 dark:text-white mb-1">Location</h3>
            <p class="text-sm text-slate-600 dark:text-slate-400">Melbourne, Australia</p>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="glass-panel rounded-2xl p-8">
          <h2 class="text-xl font-bold text-slate-900 dark:text-white mb-6">Send us a message</h2>
          <form id="contact-form" class="space-y-5">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-5">
              <div>
                <label for="contact-name" class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-1.5">Full Name</label>
                <input id="contact-name" type="text" required class="glass-input w-full px-4 py-3 rounded-lg outline-none transition-all" placeholder="Jane Smith" />
              </div>
              <div>
                <label for="contact-email" class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-1.5">Email</label>
                <input id="contact-email" type="email" required class="glass-input w-full px-4 py-3 rounded-lg outline-none transition-all" placeholder="jane@rto.com.au" />
              </div>
            </div>
            <div>
              <label for="contact-org" class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-1.5">Organisation</label>
              <input id="contact-org" type="text" class="glass-input w-full px-4 py-3 rounded-lg outline-none transition-all" placeholder="Your RTO name" />
            </div>
            <div>
              <label for="contact-message" class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-1.5">Message</label>
              <textarea id="contact-message" rows="5" required class="glass-input w-full px-4 py-3 rounded-lg outline-none transition-all resize-y" placeholder="How can we help?"></textarea>
            </div>
            <button type="submit" class="w-full sm:w-auto px-8 py-3 rounded-xl text-sm font-bold text-white bg-blue-600 hover:bg-blue-500 transition-all">
              Send Message
            </button>
          </form>
          <p id="contact-success" class="hidden mt-4 text-sm text-green-600 dark:text-green-400 font-medium">
            Thank you! Your message has been received. We'll be in touch shortly.
          </p>
        </div>
      </div>
    </section>
  </div>
</PublicLayout>

<script>
  document.getElementById('contact-form')?.addEventListener('submit', (e) => {
    e.preventDefault();
    // For now, just show success message (no backend)
    const form = e.target as HTMLFormElement;
    form.classList.add('hidden');
    document.getElementById('contact-success')?.classList.remove('hidden');
  });
</script>
