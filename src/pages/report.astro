---
import Layout from '../layouts/Layout.astro';
import ReportView from '../components/admin/ReportView.svelte';
---

<Layout title="Assessment Report">
  <div class="min-h-screen bg-slate-100 dark:bg-slate-900 py-8 print:bg-white print:p-0">
    <style is:global>
      @media print {
        body { background-color: white; color: black; }
        .no-print { display: none !important; }
        .glass-panel { border: none; box-shadow: none; background: white; }
        .print-force-color { -webkit-print-color-adjust: exact; print-color-adjust: exact; }
      }
    </style>

    <div class="max-w-4xl mx-auto px-4 print:max-w-none print:px-0">
      <div class="mb-6 flex justify-between items-center no-print">
        <a href="/dashboard" class="flex items-center text-slate-500 hover:text-blue-600 transition-colors">
          <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/></svg>
          Back to Dashboard
        </a>
        <button
          onclick="window.print()"
          class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium flex items-center shadow-sm transition-all"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"/></svg>
          Download / Print PDF
        </button>
      </div>

      <ReportView client:only="svelte" />
    </div>
  </div>
</Layout>
