---
import Layout from '../layouts/Layout.astro';
import ReportView from '../components/admin/ReportView.svelte';
---

<Layout title="Assessment Report">
  <div class="min-h-screen bg-slate-100 dark:bg-slate-900 py-8 print:bg-white print:p-0">
    <style is:global>
      @media print {
        body { background-color: white; color: black; }
        .no-print { display: none !important; }
        .glass-panel { border: none; box-shadow: none; background: white; }
        .print-force-color { -webkit-print-color-adjust: exact; print-color-adjust: exact; }
      }
    </style>

    <div class="max-w-4xl mx-auto px-4 print:max-w-none print:px-0">
      <div class="mb-6 no-print">
        <a href="/portal/llnd" class="flex items-center text-slate-500 hover:text-blue-600 transition-colors">
          <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/></svg>
          Back to Dashboard
        </a>
      </div>

      <ReportView client:only="svelte" />
    </div>
  </div>
</Layout>
