---
import Layout from '../layouts/Layout.astro';
import EeptIntro from '../components/eept/EeptIntro.svelte';
---

<Layout title="English Placement Test">
  <main class="min-h-screen flex items-center justify-center p-4 relative overflow-hidden">

    <div class="absolute inset-0 bg-gray-50 dark:bg-slate-900 -z-10"></div>
    <div class="absolute top-0 right-0 w-[600px] h-[600px] glow-blob translate-x-1/2 -translate-y-1/2 pointer-events-none" style="--blob-color:rgba(168,85,247,0.1)"></div>
    <div class="absolute bottom-0 left-0 w-[400px] h-[400px] glow-blob translate-y-1/3 -translate-x-1/4 pointer-events-none" style="--blob-color:rgba(59,130,246,0.08)"></div>

    <div class="w-full max-w-2xl relative z-10">
      <EeptIntro client:only="svelte" />
    </div>
  </main>
</Layout>
