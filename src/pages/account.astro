---
import PortalLayout from '../layouts/PortalLayout.astro';
---

<PortalLayout
  title="Account - EduX"
  portalName="Account"
  portalColor="blue"
>
  <div class="max-w-3xl mx-auto">
    <h1 class="text-2xl font-bold text-slate-900 dark:text-white mb-8">Account Settings</h1>

    <!-- Organisation Details -->
    <div class="glass-panel rounded-2xl p-6 mb-6">
      <h2 class="text-lg font-bold text-slate-900 dark:text-white mb-4">Organisation Details</h2>
      <div id="org-details" class="space-y-4">
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-slate-500 dark:text-slate-400 mb-1">Organisation Name</label>
            <p class="text-slate-900 dark:text-white font-medium" id="org-name">Loading...</p>
          </div>
          <div>
            <label class="block text-sm font-medium text-slate-500 dark:text-slate-400 mb-1">Tenant ID</label>
            <p class="text-slate-900 dark:text-white font-mono text-sm" id="tenant-id">Loading...</p>
          </div>
        </div>
      </div>
    </div>

    <!-- User Details -->
    <div class="glass-panel rounded-2xl p-6 mb-6">
      <h2 class="text-lg font-bold text-slate-900 dark:text-white mb-4">User Details</h2>
      <div class="space-y-4">
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-slate-500 dark:text-slate-400 mb-1">Email</label>
            <p class="text-slate-900 dark:text-white font-medium" id="user-email">Loading...</p>
          </div>
          <div>
            <label class="block text-sm font-medium text-slate-500 dark:text-slate-400 mb-1">Role</label>
            <p class="text-slate-900 dark:text-white font-medium" id="user-role">Loading...</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Links -->
    <div class="glass-panel rounded-2xl p-6">
      <h2 class="text-lg font-bold text-slate-900 dark:text-white mb-4">Quick Links</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
        <a href="/portal/llnd" class="flex items-center p-3 rounded-lg hover:bg-black/5 dark:hover:bg-white/10 transition-colors no-underline">
          <div class="h-9 w-9 bg-blue-600/20 dark:bg-blue-400/20 border border-blue-500/30 rounded-lg flex items-center justify-center mr-3">
            <svg class="h-4 w-4 text-blue-600 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.384-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/></svg>
          </div>
          <div>
            <p class="text-sm font-semibold text-slate-900 dark:text-white">LLND Portal</p>
            <p class="text-xs text-slate-500 dark:text-slate-400">Manage assessments</p>
          </div>
        </a>
        <a href="/portal/llnd/settings" class="flex items-center p-3 rounded-lg hover:bg-black/5 dark:hover:bg-white/10 transition-colors no-underline">
          <div class="h-9 w-9 bg-slate-600/20 dark:bg-slate-400/20 border border-slate-500/30 rounded-lg flex items-center justify-center mr-3">
            <svg class="h-4 w-4 text-slate-600 dark:text-slate-400" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd"/></svg>
          </div>
          <div>
            <p class="text-sm font-semibold text-slate-900 dark:text-white">Branding Settings</p>
            <p class="text-xs text-slate-500 dark:text-slate-400">Logo & colours</p>
          </div>
        </a>
      </div>
    </div>
  </div>
</PortalLayout>

<script>
  // Populate account details from localStorage
  const userStr = localStorage.getItem('llnd_user');
  if (userStr) {
    try {
      const user = JSON.parse(userStr);
      const emailEl = document.getElementById('user-email');
      const roleEl = document.getElementById('user-role');
      const tenantEl = document.getElementById('tenant-id');

      if (emailEl) emailEl.textContent = user.email || 'N/A';
      if (roleEl) roleEl.textContent = (user.role || 'rto_admin').replace('_', ' ').replace(/\b\w/g, (l: string) => l.toUpperCase());
      if (tenantEl) tenantEl.textContent = user.tenant_id || 'N/A';
    } catch(e) {}
  }

  // Fetch organisation details from API
  const token = localStorage.getItem('llnd_token');
  if (token) {
    fetch('/api/tenant', {
      headers: { 'Authorization': `Bearer ${token}` }
    })
    .then(r => r.ok ? r.json() : null)
    .then(data => {
      if (data?.tenant) {
        const nameEl = document.getElementById('org-name');
        if (nameEl) nameEl.textContent = data.tenant.name || 'Your Organisation';
      }
    })
    .catch(() => {
      const nameEl = document.getElementById('org-name');
      if (nameEl) nameEl.textContent = 'Your Organisation';
    });
  }
</script>
